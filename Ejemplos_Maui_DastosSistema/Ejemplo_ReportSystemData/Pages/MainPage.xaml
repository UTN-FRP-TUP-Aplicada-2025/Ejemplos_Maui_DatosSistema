<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejemplo_ReportSystemData.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Button x:Name="BtnFileLog" Text="Escribir File Log" SemanticProperties.Hint="Test API" Clicked="OnFileLogClicked"
    HorizontalOptions="Fill" />
            
            <Button Text="Send File Log Test API" SemanticProperties.Hint="Test API" Clicked="OnFileLogTestAPIClicked"
                HorizontalOptions="Fill" />

            <Button Text="Send Logcat Test API" SemanticProperties.Hint="Test API" Clicked="OnLogcastTestAPIClicked"
    HorizontalOptions="Fill" />

            <Button Text="Page Test Exception" SemanticProperties.Hint="Page Test Exception" Clicked="OnThrowExceptionPageClicked"
HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
